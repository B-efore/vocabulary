<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="#E0F2FF">

    <TextView
        android:id="@+id/custom_word_item_engWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="apple"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/custom_word_item_korWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사과"
        android:layout_below="@id/custom_word_item_engWord"
        android:layout_alignLeft="@id/custom_word_item_engWord"
        android:layout_marginTop="4dp"/>

    <FrameLayout
        android:id="@+id/custom_word_item_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/custom_word_item_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_heart"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/custom_word_item_filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_filled_heart"
            android:visibility="invisible"/>

    </FrameLayout>

</RelativeLayout>