<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/word_heart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/word_icon_zip_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_zip"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/word_icon_expand_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_expand"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중요한 단어"/>

    </LinearLayout>

    <ListView
        android:id="@+id/word_listview_heart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#25000000"
        android:layout_marginBottom="12dp"/>

    <!--////////////////////////////////////////////////-->

    <LinearLayout
        android:id="@+id/word_incorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/word_icon_zip_incorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_zip"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/word_icon_expand_incorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_expand"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="틀린 단어"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:background="#25000000"
        android:layout_marginBottom="12dp"/>

    <ListView
        android:id="@+id/word_listview_incorrect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:visibility="gone"/>

</LinearLayout>